@model TaskManager.WEB.ViewModels.IssuesListView
@using TaskManager.WEB.Helpers
@{
    ViewBag.Title = "Issues list";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var error = ViewBag.Error;
}

<h3>@ViewBag.Title</h3>

<h2>
    @Html.ActionLink(linkText: "Create new issue", actionName: "Edit", controllerName: "Issue", routeValues: new { id = 0 }, htmlAttributes: new { @class = "btn btn-primary" })
</h2>

@if (error != null)
{
    <div class="alert alert-danger" role="alert">
        @error
    </div>
}

@if (Model.Issues != null && Model.Issues.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Project</th>
                <th>Name</th>
                <th>Begin Date</th>
                <th>End Date</th>
                <th>Assignee</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var issue in Model.Issues)
            {
                <tr>
                    <td>@Html.DisplayFor(_ => issue.ProjectShortName)</td>
                    <td>@Html.DisplayFor(_ => issue.Name)</td>
                    <td>@Html.DisplayFor(_ => issue.BeginDate)</td>
                    <td>@Html.DisplayFor(_ => issue.EndDate)</td>
                    <td>@Html.DisplayFor(_ => issue.EmployeeFullName)</td>
                    <td>
                        @Html.ActionLink(linkText: "Edit", actionName: "Edit", controllerName: "Issue", routeValues: new { id = issue.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                    </td>
                    <td>
                        @Html.ActionLink(linkText: "Delete", actionName: "Delete", controllerName: "Issue", routeValues: new { id = issue.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    if (Model.PageInfo.TotalItems > Model.PageInfo.PageSize)
    {
    <br />
    <div class="btn-group">
        @Html.PageLinks(Model.PageInfo, x => Url.Action(actionName: "List", controllerName: "Issue", routeValues: new { page = x }))
    </div>
    }
}
else
{
    <div class="alert alert-warning" role="alert">
        There are no issues yet!
    </div>
}

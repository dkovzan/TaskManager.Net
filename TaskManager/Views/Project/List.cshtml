@model IEnumerable<TaskManager.Models.Project>
@{
    ViewBag.Title = "Projects list";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var error = ViewBag.Error;
}

<h3>Projects list</h3>

<h2>
    @Html.ActionLink(linkText: "Create new project", actionName: "Edit", controllerName: "Project", routeValues: new { id = 0, isCleanSessionNeeded = true }, htmlAttributes: new { @class = "btn btn-primary", @onclick = "clearTempProject()" })
</h2>

@if (error != null)
{
    <div class="alert alert-danger" role="alert">
        @error
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(_ => _.Name)</th>
                <th>@Html.DisplayNameFor(_ => _.ShortName)</th>
                <th>@Html.DisplayNameFor(_ => _.Description)</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(_ => project.Name)</td>
                    <td>@Html.DisplayFor(_ => project.ShortName)</td>
                    <td>@Html.DisplayFor(_ => project.Description)</td>
                    <td>
                        @Html.ActionLink(linkText: "Edit", actionName: "Edit", controllerName: "Project", routeValues: new { id = project.Id, isCleanSessionNeeded = true }, htmlAttributes: new { @class = "btn btn-primary", @onclick = "clearTempProject()" })
                    </td>
                    <td>
                        @Html.ActionLink(linkText: "Delete", actionName: "Delete", controllerName: "Project", routeValues: new { id = project.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        There are no projects yet!
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/listprojects")
}

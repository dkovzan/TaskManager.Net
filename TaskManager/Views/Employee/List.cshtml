@model IEnumerable<TaskManager.Models.Employee>
@{
    ViewBag.Title = "Employees list";

    var error = ViewBag.Error;
}

<h3>@ViewBag.Title</h3>

<h2>
    @Html.ActionLink(linkText: "Create new employee", actionName: "Edit", routeValues: new { id = 0}, controllerName: "Employee", htmlAttributes: new { @class = "btn btn-primary" })

</h2>

@if (error != null)
{
    <div class="alert alert-danger" role="alert">
        @error
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(_ => _.FirstName)</th>
                <th>@Html.DisplayNameFor(_ => _.LastName)</th>
                <th>@Html.DisplayNameFor(_ => _.MiddleName)</th>
                <th>@Html.DisplayNameFor(_ => _.Position)</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(_ => employee.FirstName)</td>
                    <td>@Html.DisplayFor(_ => employee.LastName)</td>
                    <td>@Html.DisplayFor(_ => employee.MiddleName)</td>
                    <td>@Html.DisplayFor(_ => employee.Position)</td>
                    <td>
                        @Html.ActionLink(linkText: "Edit", actionName: "Edit", routeValues: new { id = employee.Id }, controllerName: "Employee", htmlAttributes: new { @class = "btn btn-primary" })
                    </td>
                    <td>
                        @Html.ActionLink(linkText: "Delete", actionName: "Delete", routeValues: new { id = employee.Id }, controllerName: "Employee", htmlAttributes: new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        There are no employees yet!
    </div>
}
